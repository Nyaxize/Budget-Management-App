<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/goalNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goal Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/goalAmountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goal Amount" />

    <TextView
        android:id="@+id/goalSavedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saved Amount" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addContributionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Contribution"/>

        <Button
            android:id="@+id/deleteGoalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Goal"
            android:textColor="#FF0000"/>
    </LinearLayout>
</LinearLayout>
